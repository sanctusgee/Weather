#: import main main
#: import ListAdapter kivy.adapters.listadapter.ListAdapter
##  #: import ListItemButton kivy.uix.listview.ListItemButton

WeatherRoot:

<WeatherRoot>
    AddLocationForm:
        id: location_form
        orientation: "vertical"
        search_input: search_box
        search_results: search_results_list
        current_location: curr_loc
        search_button: search_btn

        BoxLayout:
            height: "40dp"
            size_hint_y: None
            TextInput:
                id: search_box
                multiline: False
                focus: True
                size_hint_x: 50
                on_text_validate: location_form.search_location()    # enter key pressed
            Button:
                id: search_btn
                text: "Search"
                size_hint_x: 25
                on_press: location_form.search_location()
            Button:
                id: curr_loc
                text: "Current Location"
                size_hint_x: 25
                on_press: location_form.search_location()
        ListView:
            id: search_results_list
            adapter:
                ListAdapter(data=[], cls=main.LocationButton, args_converter=location_form.args_converter)
        Button:
            height: "40dp"
            size_hint_y: None
            text: "Cancel"
            on_press: app.root.show_current_weather(None)


<LocationButton>:
    text: "{} ({})".format(self.location[0], self.location[1])
    height: "40dp"
    size_hint_y: None
    on_press: app.root.show_current_weather(self.location)


<CurrentWeather>:
    orientation: "vertical"
    BoxLayout:
        Label:
            text: "{} ({})".format(root.location[0], root.location[1])
            font_size: "30dp"
        Label:
            text: "{}".format(root.temp)
            font_size: "30dp"
    Label:
        text: "Hello World" ##root.conditions
    BoxLayout:
        orientation: "horizontal"
        Label:
            text: "Low: {}".format(root.temp_min)
        Label:
            text: "High: {}".format(root.temp_max)
    BoxLayout:
        orientation: "horizontal"
        size_hint_y: None
        height: "40dp"
        Button:
            text: "Add Location"
            on_press: app.root.show_add_location_form()
        Button:
            text: "Forecast"

